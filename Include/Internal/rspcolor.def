SetDef __RSPCOLOR

;***************************************************************************
;	DEFAULT SCREEN COLORS (standard 16-color palette)
;***************************************************************************

RespColor 		etype byte

RC_BLACK 	enum RespColor		; black color index
RC_GRAY_7	enum RespColor		; looks like dark blue on VGA
RC_GRAY_13	enum RespColor		; looks like dark green on VGA
RC_GRAY_20	enum RespColor		; looks like dark cyan on VGA
RC_GRAY_27	enum RespColor		; looks like dark red on VGA
RC_GRAY_33	enum RespColor		; looks like dark violet on VGA
RC_GRAY_40	enum RespColor		; looks like brown  on VGA
RC_GRAY_47	enum RespColor		; looks like light gray on VGA
RC_GRAY_53	enum RespColor		; looks like dark gray on VGA
RC_GRAY_60	enum RespColor		; looks like light blue on VGA
RC_GRAY_68	enum RespColor		; looks like light green on VGA
RC_GRAY_73	enum RespColor		; looks like light cyan on VGA
RC_GRAY_80	enum RespColor		; looks like light red on VGA
RC_GRAY_88	enum RespColor		; looks like light violet on VGA
RC_GRAY_93	enum RespColor		; looks like yellow on VGA
RC_WHITE 	enum RespColor		; white color index

;;
;; The UI of Responder should only use 4 levels of Gray:
;; Black, White, and 2 shades of gray.  Use the constants below
;; for consistency.
;; 

RC_LIGHT_GRAY	equ	RC_GRAY_88		;Corresponds to pixel value 010
						; (on an inverted display)
RC_LIGHT_GREY	equ	RC_LIGHT_GRAY
RC_DARK_GRAY	equ	RC_GRAY_13		;Corresponds to pixel value 101
						; (on an inverted display)
RC_DARK_GREY	equ	RC_DARK_GRAY	

RC_GREY_7 equ RC_GRAY_7
RC_GREY_13 equ RC_GRAY_13
RC_GREY_20 equ RC_GRAY_20
RC_GREY_27 equ RC_GRAY_27
RC_GREY_33 equ RC_GRAY_33
RC_GREY_40 equ RC_GRAY_40
RC_GREY_47 equ RC_GRAY_47
RC_GREY_53 equ RC_GRAY_53
RC_GREY_60 equ RC_GRAY_60
RC_GREY_68 equ RC_GRAY_68
RC_GREY_73 equ RC_GRAY_73
RC_GREY_80 equ RC_GRAY_80
RC_GREY_88 equ RC_GRAY_88
RC_GREY_93 equ RC_GRAY_93

