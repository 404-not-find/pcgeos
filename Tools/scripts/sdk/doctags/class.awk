###############################################################################

/@class/ {
    if ((NF > 1) && match($1, /@class/) && match($2, /Class/))
    {
	gsub(/[^A-z0-9_]/, "", $2)
	outputLine = sprintf("%s:%s:%d", $2, FILENAME, NR)
	printf("%-100s\n", outputLine)
    }
}
