#include "generic.uih"
#include "impex.uih"

start	ExportUI;

ExportOptions = GenInteraction {
	genStates = default -usable;
	children = SelectBitCountGroup;
	visibility = subGroup;
	hints = {
		HINT_EXPAND_WIDTH_TO_FIT_PARENT,
		HINT_CENTER_CHILDREN_HORIZONTALLY
	}
}

SelectBitCountGroup = GenInteraction {
	moniker = 't', "Format:";
	children =
		SelectBitCount;
}	

SelectBitCount	= GenItemGroup {
	selection = 1;
	behaviorType = exclusive;
	children =
		Monochrome,
		FourBit,
		EightBit;
	hints = {
		HINT_ITEM_GROUP_MINIMIZE_SIZE,
		HINT_ITEM_GROUP_DISPLAY_CURRENT_SELECTION,
	}
}

Monochrome = GenItem {
	moniker = 'M', "Monochrome (1 bit/pixel)";
	identifier = 1;
}

FourBit = GenItem {
	moniker = '1', "16 Color (4 bits/pixel)";
	identifier = 4;
}

EightBit = GenItem {
	moniker = '2', "256 Color (8 bits/pixel)";
	identifier = 8;
}

end	ExportUI;



