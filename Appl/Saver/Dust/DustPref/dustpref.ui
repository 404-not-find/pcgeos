#include	<generic.uih>
#include	<config.uih>
#include	<saver.uih>


start	DustOptions;

RootObject = PrefInteraction {
	children =
		DustSizeList,
		DustSmoothList;
	genStates = default -usable;
	hints = {
		HINT_CENTER_CHILDREN_ON_MONIKERS,
		ATTR_GEN_INIT_FILE_CATEGORY {
			char "dust", 0
		}
	}
}

DustSizeList = PrefItemGroup {
	moniker = "Size:";
	hints = {
		ATTR_GEN_INIT_FILE_KEY {
			char "moteSize", 0
		}
	}
	children = DOSmall, DOMedium, DOLarge, DORandom;
	selection = DUST_SIZE_MEDIUM;
}

DOSmall = GenItem {
	moniker = "Small";
	identifier = DUST_SIZE_SMALL;
}

DOMedium = GenItem {
	moniker = "Medium";
	identifier = DUST_SIZE_MEDIUM;
}

DOLarge = GenItem {
	moniker = "Large";
	identifier = DUST_SIZE_LARGE;
}

DORandom = GenItem {
	moniker = "Random";
	identifier = DUST_SIZE_RANDOM;
}

DustSmoothList = PrefItemGroup {
	moniker = "Edges:";
	hints = {
		ATTR_GEN_INIT_FILE_KEY {
			char "edges", 0
		}
	}
	children =
		DSPointy,
		DSSmooth,
		DSVerySmooth;
	selection = "DST_SMOOTH";
	numSelections = 1;
}

DSPointy = GenItem {
	moniker = "Pointy";
	identifier = "DST_POINTY";
}

DSSmooth = GenItem {
	moniker = "Smooth";
	identifier = "DST_SMOOTH";
}

DSVerySmooth = GenItem {
	moniker = "Very Smooth";
	identifier = "DST_VERY_SMOOTH";
}

end	DustOptions;
