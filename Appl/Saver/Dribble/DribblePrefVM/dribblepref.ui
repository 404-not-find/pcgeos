#include	<generic.uih>
#include	<config.uih>
#include	<saver.uih>


start	DribbleOptions;

RootObject = PrefInteraction {
	children = DribbleInterval,
		   DribblePaintGroup,
		   DribbleClearGroup;
	genStates = default -usable;
	hints = {
		HINT_CENTER_CHILDREN_ON_MONIKERS,
		ATTR_GEN_INIT_FILE_CATEGORY {
			char "dribble", 0
		}
	}
}

DribbleInterval = PrefValue {
	hints = { 
		ATTR_GEN_INIT_FILE_KEY {
			char	"interval", 0
		}
	}
	moniker = "Interval:";
	minimum = DRIBBLE_MIN_INTERVAL;
	maximum = DRIBBLE_MAX_INTERVAL;
	value = DRIBBLE_DEFAULT_INTERVAL;
}

DribblePaintGroup = PrefItemGroup {
	hints = {
		ATTR_GEN_INIT_FILE_KEY {
			char	"paint", 0
		}
	}
	moniker = "Dribble Paint:";
	children = DPYes, DPNo;
	selection = 1;
	numSelections = 1;
}

DPYes = GenItem {
	moniker = "Yes";
	identifier = 1;
}

DPNo = GenItem {
	moniker = "No";
	identifier = 0;
}

DribbleClearGroup = PrefItemGroup {
	hints = {
		ATTR_GEN_INIT_FILE_KEY {
			char	"clear", 0
		}
	}
	moniker = "Clear Screen First:";
	children = DCYes, DCNo;
	selection = 1;
	numSelections = 1;
}

DCYes = GenItem {
	moniker = "Yes";
	identifier = 1;
}

DCNo = GenItem {
	moniker = "No";
	identifier = 0;
}

end	DribbleOptions;
	
