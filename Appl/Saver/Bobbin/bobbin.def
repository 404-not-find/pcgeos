;==============================================================================
;
;		       CONSTANTS AND DATA TYPES
;
;==============================================================================

;
; The different speeds we support
;
BOBBIN_SLOW_SPEED		equ	0
BOBBIN_MEDIUM_SPEED		equ	2
BOBBIN_FAST_SPEED		equ	4

BOBBIN_TIMER_SLOW		equ	4
BOBBIN_TIMER_MEDIUM		equ	2
BOBBIN_TIMER_FAST		equ	1

BOBBIN_STEP_SLOW		equ	5
BOBBIN_STEP_MEDIUM		equ	6
BOBBIN_STEP_FAST		equ	8

BOBBIN_WALK_SLOW		equ	10
BOBBIN_WALK_MEDIUM		equ	7
BOBBIN_WALK_FAST		equ	4

MARGIN_HEIGHT			equ	40
DUDE_HEIGHT			equ	37	; height of normal bitmap
DUDE_WIDTH			equ	48	; width of normal bitmap
DUDE_WALK_WIDTH			equ	60	; width of walking bitmap
DUDE_STEP			equ	6	; amount by which to move dude
						;  each walking step. If more
						;  than 6, then bitmap blackness
						;  will need to extend farther
						;  right.

BOBBIN_SPOOL_LEFT		equ	11
BOBBIN_SPOOL_RIGHT		equ	-3
BOBBIN_SPOOL_HEIGHT		equ	10
