 ***************************************************************/
@ifdef CONFIRM_SEND_LATER
const char noSendLaterHelpKey[] = "noSendLaterHelp";
const char sendLaterHelpContext[] = "dbNewMessageCUI";
@endif

@method MailComposerClass, MSG_MAIL_COMPOSER_SEND_MESSAGE_LATER
{    
    if (!(@call oself::MSG_MAIL_COMPOSER_SEND_MESSAGE(0))) {
@ifdef CONFIRM_SEND_LATER
	if (@call application::MSG_MAIL_APP_GET_USER_LEVEL() == UIIL_INTRODUCTORY) {
