@method MailComposerClass, MSG_MAIL_COMPOSER_EDIT_MESSAGE
{
        FileLongName *vdp;
	FileLongName path;
	FileHandle fileHan;
	TCHAR *fp, *pp1, *pp2;
	MemHandle hdrHan;

	EC ( ECCheckMemHandle(fileName) );

        /*
	 * reset the UI
	 */
	if (!@call oself::MSG_MAIL_COMPOSER_RESET()) {
