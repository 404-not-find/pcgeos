@define LSBOX(identifier,left,top,right,bottom,value,word) \
    @object VisBoxClass identifier = { \
    	VI_bounds = { left, top, right, bottom}; \
    	VBI_isWord = word; \
    	VBI_value = value; \
    	VBI_diamond_points = { \
    		{ left, (top + bottom) / 2 }, \
    		{ (left + right) / 2, top }, \
    		{ right - 1, (top + bottom) / 2 }, \
    		{ (left + right) / 2, bottom - 1 } \
       	}; \
    }

