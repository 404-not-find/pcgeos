class	SpriteContent = GameContent {
	tableSize		= wordComp : 0;
	leftColTable		= wordComp : 0;
	rightColTable		= wordComp : 0;
	topRowTable		= wordComp : 0;
	bottomRowTable		= wordComp : 0;
