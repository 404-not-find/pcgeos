	YVelocity		= wordComp : 0;
	angle			= wordComp : 0;
	rotation		= wordComp : 0;
	groupID			= wordComp : 0;
	flags			= wordComp : 0;
	uniqueID		= wordComp : 0;
	life			= wordComp : 0;
	detect_radius		= wordComp : 0;
	color			= wordComp : 0;
	imageCount		= wordComp : 0;
